<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sly_url_shortener.entity_manager" alias="doctrine.orm.default_entity_manager" />

        <service id="sly_url_shortener.link_manager" class="Sly\UrlShortenerBundle\Entity\LinkManager" public="false">
            <argument type="service" id="sly_url_shortener.entity_manager" />
            <argument>SlyUrlShortenerBundle:Link</argument>
        </service>
    </services>

</container>
